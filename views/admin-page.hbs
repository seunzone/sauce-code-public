<body>

<!-- Review School Modal -->
<div class="modal fade" id="Review" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Review School</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="auth-wrapper">
                    <div class="form-tabs">
                        <a href="#" data-frm="login-frm" class="tab active">Carefully Read Details</a>
                    </div>
                    <form class="login-frm frm" action="#" method="post">
                        <div class="form-group">
                            <label for="email1">Name of School:</label>
                            <h5>School Name</h5>
                        </div>
                        <div class="form-group">
                            <label for="location">School Image</label>
                            <img src="img/pen.jpg">
                        </div>
                        <div class="form-group">
                                <label for="email">Your Email Address:</label>
                                <h5>example@something.com</h5>
                        </div>
                        <div class="form-group">
                            <label for="pass1">Type of Institution</label>
                            <h5>Primary School</h5>
                        </div>
                        <div class="form-group">
                            <label for="email1">Address:</label>
                            <h6>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Accusantium cupiditate quas deleniti?</h6>
                        </div>
                        <div class="form-group">
                                <label for="email1">Location</label>
                                <h5>Sokoto</h5>
                        </div>
                        <div class="form-group">
                            <label for="message">School's Description:</label>
                            <h6>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Eveniet quod ab fuga officia error cumque!</h6>
                        </div>
                        <br>
                        <hr>
                        <div class="form-tabs">
                            <a href="#" data-frm="register-frm" class="tab">Other Details</a>
                        </div>
                        <div class="form-group">
                            <label for="email1">Schools Email:</label>
                            <h5>boom@jj.com</h5>
                        </div>
                        <div class="form-group">
                            <label for="email1">Schools Number:</label>
                            <h5>07031229501</h5>
                        </div>
                       <br>
                        <div class="sub-btn">
                            <input type="submit" class="btn ui-btn info" value="Approve">
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div> 
<!-- end of Review Modal -->
  <!-- Delete MODAL -->
  <div class="modal fade" id="Delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Delete Listing</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete this listing?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Agree</button>
        </div>
      </div>
    </div>
  </div>
  <!-- delete MODAL ENDS -->
    <!-- User Delete MODAL -->
    <div class="modal fade" id="DeleteUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Delete User</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  Are you sure you want to delete this User?
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                  <button type="button" class="btn btn-danger" data-dismiss="modal">Agree</button>
                </div>
              </div>
            </div>
          </div>
          <!-- delete User ENDS -->

<!--top bar-->
<div class="top-bar">
    <div class="slide-container">
        <div class="top-strip">
            <i class="fa fa-angle-left fa-2x side-nav-toggle"></i>
        </div>
        <div class="bottom-strip">
            <a href="#">Admin</a> <i class="fa fa-angle-right"></i>
