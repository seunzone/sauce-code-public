            <a href="#"> Listings</a>
        </div>
    </div>
</div>
<!--end top bar-->

<!--side menu-->
<div class="side-nav">
    <div class="dash-logo">
        <i class="fa fa-times cls-nav"></i>
        <h2>Chief Admin</h2>
    </div>
    <div class="links-container">
        <div class="panel-user">
            <a href="#"><strong>Welcome Chief Admin</strong></a>
        </div>
        <ul class="list-unstyled dash-links">
            <li><a href="/" ><i class="fa fa-th-large"></i> <span>Home</span></a></li>
            <li><a href="#" class="active"><i class="fa fa-th-large"></i> <span>My Dashboard</span></a></li>
            <li><a href="/list"><i class="fa fa-th-large"></i> <span>All Schools</span></a></li>
        </ul>
        <div class="logout"><a href="/logout">Logout</a></div>
    </div>
</div>
<!--end side menu-->

<!--dashboard content-->
<div class="slide-container">
    <div class="dashboard-content">
<div class="row">
    <button class="btn ui-btn info" data-toggle="modal" data-target="#Modal">Add New Listing</button><br><hr><br>
    <!--my listings-->
    <div class="holder col-md-6">
            <div class="top-part"><strong>All Schools</strong><i class="fa fa-list"></i></div>
            {{#each schools}}
            <div class="my-listing">
                <h5><a href="/schools/{{_id}}">{{name}}</a></h5>
                {{#if accepted}}
                <span><i class="fa fa-check-circle-o text-success"></i> <em>Approved</em></span>
                {{else}}
                <span><i class="fa fa-question-circle-o text-warning"></i> <em>Pending</em></span>
                {{/if}}
                &nbsp;<form method="POST" action="/schools/{{_id}}/verify"><button href="#" class="btn btn-outline-success">Verify</button></form>
               <form method="post" action="/delete/{{_id}}">
                    <button class="btn btn-outline-danger">Delete</button>
                </form>
                <div class="rating-stars">
                    <i class="fa fa-star yel"></i>
                    <i class="fa fa-star yel"></i>
                    <i class="fa fa-star yel"></i>
                    <i class="fa fa-star-half-empty"></i>
                    <i class="fa fa-star-o yel"></i>
                    <em>( {{_v}} Reviews)</em>
                </div>
            </div>
            {{/each}}
        </div>
            <!--end my listings-->
            <!--my listings--><div class="col-md-1"></div>
        <div class="holder col-md-5">
                <div class="top-part"><strong>Users</strong><i class="fa fa-list"></i></div>
                {{#each users}}
                <div class="my-listing">
                        <h5><i class="fa fa-user-circle-o"></i> {{username}} </h5>
                        <span> <i class="fa fa-envelope-open"></i><em> {{email}} </em></span>
                        &nbsp;<a href="#" class="btn btn-outline-danger" data-toggle="modal" data-target="#DeleteUser"><i class="fa fa-minus-circle"></i>Delete</a>
                </div>
                {{/each}}
            </div>
                <!--end my listings-->
</div>

        <!--dashboard footer-->
        <div class="dash-footer">
            <i  class="fa fa-copyright"></i> 2018 Saucecode.
