    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-nice-select/1.1.0/css/nice-select.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/assets/owl.theme.green.min.css">
    <link rel="stylesheet" href="/css/app.css">

    <!--end stylesheets-->

    <!--google fonts-->

    <link href="https://fonts.googleapis.com/css?family=Quicksand:700|Raleway|Tangerine" rel="stylesheet">
    <!--end google fonts-->
     <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel="icon" href="favicon.ico" type="image/x-icon">

</head>
<body>



<!--top navbar-->
<nav class="ui-nav">
    <div class="logo"><a href="/"><img src="img/logo.png"></a></div>
    <div class="start-here">
        <a href="/signup" class="btn ui-btn info">Register</a>
    </div>
</nav>
<!--end top navbar-->


<div class="content-wrapper">

    <!--header-->
    <header class="head">
        <h1><strong>Login</strong></h1>
        {{#if message}}
        <div class="alert alert-danger">
            <strong>Please login again</strong> Invalid login details
        </div>
        {{else}}
        <div class="alert alert-info">
            <strong>Please Enter Your Login Details</strong>
        </div>
        {{/if}}
    </header>
    <!--end header-->

    <!--pricing tables-->
    <div class="p-tables">
        <div class="row">
            
            <div class="col-lg-2 col-md-3"></div>
            <div class="col-lg-8 col-md-8"><div class="pricing-table">
                <form class="login-frm frm" action="/auth" method="post">
                    <div class="form-group">
                        <label for="email1">Username:</label>
                        <input type="username" required name="username" autocomplete="email" id="email1">
                    </div>
                    <div class="form-group">
                        <label for="pass1">Password:</label>
                        <input type="password" required name="password" id="pass1">
                    </div>
                    <div class="remember-me">
                        <div>
                            <input type="checkbox" id="test1" />
                            <label for="test1">Remember Me</label>
                        </div>
                        <a href="/forgot">Forgot Password?</a>
                    </div>
                    <div class="sub-btn">
                        <input type="submit" class="btn ui-btn info text-white" value="SIGN IN">
                    </div>
                    <div align="center">
                        <h6>Dont have an account?, signup <a href="/signup">here</a></h6>
                    </div>
                </form>
            </div></div>
        </div>
    </div>
    <!--end pricing tables-->

   

</div>

<!--footer section-->
<div class="footer">
    <div class="row">
        <div class="col-lg-4 col-md-4"></div><p class="copyright footer-logo"><i  class="fa fa-copyright"></i> 2018 Saucecode.
