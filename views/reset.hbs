    <header class="head">
        <h1>Reset<strong> Password!</strong></h1>
        {{#if message}}
        <div class="alert alert-success">
            <strong>{{message}}</strong>
        </div>
        {{else}}
        <div class="alert alert-success">
            <strong>Set a new password</strong>
        </div>
        {{/if}}
         <form class="register-frm frm" action="/resetpass" method="post">
                    <div class="form-group">
                        <label for="email2">Enter Your Email:</label>
                        <input type="email" required name="email" autocomplete="email" id="email2">
                    </div>
                    <div class="form-group">
                        <label for="email2">Enter New Password:</label>
                        <input type="password" required name="password" autocomplete="email" id="email2">
                    </div>
                    <div class="sub-btn">
                        <input type="submit" class="btn ui-btn info text-white" value="Recover my Password">
                    </div>
                </form>
    </header>
